#include<bits/stdc++.h>
using namespace std;

// merge overlapping intervals

class Solution{
private:
public:
    vector<vector<int>> mergeOverlappingIntervals(vector<vector<int>> &arr)
    {
        sort(begin(arr),end(arr));
        vector<vector<int>> res;
        for(auto it:arr)
        {
            if(res.size()==0 or it[0]>res.back()[1])
            {
                res.push_back(it);
            }
            else
            {
                res.back()[1]=max(res.back()[1],it[1]);
            }
        }
        return res;
    }
};
int main()
{
    vector<vector<int>> arr={{1,3},{2,6},{8,10},{15,18}};
    for(auto it:arr)
    {
        for(auto i:it)
        {
            cout<<i<<" ";
        }
        cout<<endl;
    }
    cout<<endl;
    Solution solution;
    auto res=solution.mergeOverlappingIntervals(arr);
    for(auto it:res)
    {
        for(auto i:it)
        {
            cout<<i<<" ";
        }
        cout<<endl;
    }
}
