#include<bits/stdc++.h>
using namespace std;

// count inversions is modification of merge sort algo 
// where for i < j need to count the number of elements arr[j] < arr[i]


class Solution{
private:
public:
    int merge(vector<int> &arr,int low,int mid,int high)
    {
        vector<int> k;
        int left=low,right=mid+1,ans=0;
        while(left<=mid and right<=high)
        {
            if(arr[left]<=arr[right])
            {
                k.push_back(arr[left++]);
            }
            else
            {
                ans+=(mid-left+1);
                k.push_back(arr[right++]);
            }
        }
        while(left<=mid)
        {
            k.push_back(arr[left++]);
        }
        while(right<=high)
        {
            k.push_back(arr[right++]);
        }
        for(int i=low;i<=high;i++)
        {
            arr[i]=k[i-low];
        }
        return ans;
    }
    int mergeSort(vector<int> &arr,int low,int high)
    {
        int ans=0;
        if(low<high)
        {
            int mid=low+(high-low)/2;
            ans+=mergeSort(arr,low,mid);
            ans+=mergeSort(arr,mid+1,high);
            ans+=merge(arr,low,mid,high);
        }
        return ans;
    }
    int countInversions(vector<int> &arr)
    {
        int low=0,high=arr.size()-1;
        return mergeSort(arr,low,high);
    }
};
int main()
{
    vector<int> arr = {5,4,3,2,1};
    for(auto it:arr)
    {
        cout<<it<<" ";
    }
    cout<<endl;
    Solution solution;
    auto res=solution.countInversions(arr);
    cout<<"number of inversions is/are : "<<res<<endl;
}

