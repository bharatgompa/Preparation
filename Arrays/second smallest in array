#include<bits/stdc++.h>
using namespace std;

// second smallest element in an array

class Solution{
private:
public:
    int secondLargest(vector<int> &arr)
    {
        int first=INT_MAX,second=INT_MAX;
        for(auto it:arr)
        {
            if(it<first)
            {
                second=first;
                first=it;
            }
            else if(it<second and it!=first)
            {
                second=it;
            }
        }
        return second;
    }
};
int main()
{
    vector<int> arr={3,4,5,2,1,9};
    for(auto it:arr)
    {
        cout<<it<<" ";
    }
    cout<<endl;
    int n=arr.size();
    Solution solution;
    auto res=solution.secondLargest(arr);
    cout<<"second smallest element in the array is : "<<res<<endl;
}
