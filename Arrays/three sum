#include<bits/stdc++.h>
using namespace std;

// 3 sum problem
// find triplets which equals sum equsls to 0

class Solution{
private:
public:
    vector<vector<int>> threeSum(vector<int> &arr)
    {
        vector<vector<int>> res;
        sort(begin(arr),end(arr));
        int n=arr.size();
        for(int i=0;i<n-2;i++)
        {
            if(i>0 and arr[i]==arr[i-1]) continue;
            int j=i+1,k=n-1;
            while(j<k)
            {
                int sum=arr[i]+arr[j]+arr[k];
                if(sum==0)
                {
                    res.push_back({arr[i],arr[j],arr[k]});
                    j++;
                    k--;
                    while(j<k and arr[j]==arr[j-1]) continue;
                    while(j<k and arr[k]==arr[k+1]) continue;
                }
                else if(sum<0)
                {
                    j++;
                }
                else
                {
                    k--;
                }
            }
        }
        return res;
    }
};
int main()
{
    vector<int> arr={-1,0,1,0};
    for(auto it:arr)
    {
        cout<<it<<" ";
    }
    cout<<endl;
    Solution solution;
    auto res=solution.threeSum(arr);
    for(auto it:res)
    {
        for(auto i:it)
        {
            cout<<i<<" ";
        }
        cout<<endl;
    }
}
