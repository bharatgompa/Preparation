#include<bits/stdc++.h>
using namespace std;

// leaders in a array is like
// the element which is greater than all the elements on its right

class Solution{
private:
public:
    vector<int> leadersInArray(vector<int> &arr)
    {
        vector<int> res;
        int n=arr.size(),maxi=-1;
        for(int i=n-1;i>=0;i--)
        {
            if(arr[i]>maxi)
            {
                res.push_back(arr[i]);
                maxi=arr[i];
            }
        }
        return res;
    }
};
int main()
{
    vector<int> arr={10, 22, 12, 3, 0, 6};
    for(auto it:arr)
    {
        cout<<it<<" ";
    }
    cout<<endl;
    Solution solution;
    auto res=solution.leadersInArray(arr);
    for(auto it:res)
    {
        cout<<it<<" ";
    }
}
