#include<bits/stdc++.h>
using namespace std;

// longest consecutive sequence

class Solution{
private:
public:
    int longestConsecutiveSequence(vector<int> &arr)
    {
        unordered_set<int> st(begin(arr),end(arr));
        int maxi=1;
        for(auto it:arr)
        {
            if(st.find(it-1)==st.end())
            {
                int x=it,count=1;
                while(st.find(x+1)!=st.end())
                {
                    count++;
                    x=x+1;
                }
                maxi=max(maxi,count);
            }
        }
        return maxi;
    }
};
int main()
{
    vector<int> arr={99,98,97,100,200,1,3,2,4,5};
    for(auto it:arr)
    {
        cout<<it<<" ";
    }
    cout<<endl;
    Solution solution;
    auto res=solution.longestConsecutiveSequence(arr);
    cout<<"longest consecutive sequence is : "<<res<<endl;
}
