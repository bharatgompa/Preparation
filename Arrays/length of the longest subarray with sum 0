#include<bits/stdc++.h>
using namespace std;

// length of the longest subarray with sum 0

class Solution{
private:
public:
    int lengthOfTheLongestSubArrayWithSumZero(vector<int> &arr)
    {
        unordered_map<int,int> mp;
        int sum=0,maxi=0;
        for(int i=0;i<arr.size();i++)
        {
            sum+=arr[i];
            if(sum==0)
            {
                maxi=i+1;
            }
            else
            {
                if(mp.find(sum)!=mp.end())
                {
                    maxi=max(maxi,i-mp[sum]);
                }
                else
                {
                    mp[sum]=i;
                }
            }
        }
        return maxi;
    }
};
int main()
{
    vector<int> arr={9, -3, 3, -1, 6, -5};
    for(auto it:arr)
    {
        cout<<it<<" ";
    }
    cout<<endl;
    Solution solution;
    auto res=solution.lengthOfTheLongestSubArrayWithSumZero(arr);
    cout<<"length of the longest subarray with sum 0 is : "<<res<<endl;
}
