#include<bits/stdc++.h>
using namespace std;

// majority element in the array greater than n/2 times
// so there will be exactly one element which appears once 

class Solution{
private:
public:
    int majorityElement1(vector<int> &arr)
    {
        int n=arr.size(),ele=0,count=0;
        for(auto it:arr)
        {
            if(count==0)
            {
                ele=it;
                count=1;
            }
            else if(ele==it)
            {
                count++;
            }
            else
            {
                count--;
            }
        }
        count=0;
        for(auto it:arr)
        {
            if(ele==it)
            {
                count++;
            }
        }
        return count > (n/2) ? ele : -1;
    }
};
int main()
{
    vector<int> arr={4,4,2,4,3,4,4,3,2,4};
    for(auto it:arr)
    {
        cout<<it<<" ";
    }
    cout<<endl;
    Solution solution;
    auto res=solution.majorityElement1(arr);
    cout<<"majority element is : "<<res<<endl;
}
