#include<bits/stdc++.h>
using namespace std;

class Solution{
private:
public:
    int findFirstOccurence(vector<int> &arr,int k)
    {
        int n=arr.size(),low=0,high=n-1,res=-1;
        while(low<=high)
        {
            int mid=low+(high-low)/2;
            if(arr[mid]==k)
            {
                res=mid;
                high=mid-1;
            }
            else if(arr[mid]<k)
            {
                low=mid+1;
            }
            else
            {
                high=mid-1;
            }
        }
        return res;
    }
    int findLastOccurence(vector<int> &arr,int k)
    {
        int n=arr.size(),low=0,high=n-1,res=-1;
        while(low<=high)
        {
            int mid=low+(high-low)/2;
            if(arr[mid]==k)
            {
                res=mid;
                low=mid+1;
            }
            else if(arr[mid]<k)
            {
                low=mid+1;
            }
            else
            {
                high=mid-1;
            }
        }
        return res;
    }
};
int main()
{
    vector<int> arr={3,4,13,13,13,20,40};
    for(auto it:arr)
    {
        cout<<it<<" ";
    }
    cout<<endl;
    int k=13;
    Solution solution;
    auto res1=solution.findFirstOccurence(arr,k); 
    auto res2=solution.findLastOccurence(arr,k);
    cout<<res1<<" "<<res2<<endl;
}

