#include<bits/stdc++.h>
using namespace std;

//lower bound is the index of the element which is greater than or equal to given element

class Solution{
private:
public:
    int findLowerBound1(vector<int> &arr,int k)
    {
        return lower_bound(begin(arr),end(arr),k)-begin(arr);
    }
    int findLowerBound2(vector<int> &arr,int k)
    {
        int n=arr.size(),low=0,high=n-1,ans=n;
        while(low<=high)
        {
            int mid=low+(high-low)/2;
            if(arr[mid]>=k)
            {
                ans=mid;
                high=mid-1;
            }
            else
            {
                low=mid+1;
            }
        }
        return ans;
    }
};
int main()
{
    vector<int> arr={3,5,8,15,19};
    for(auto it:arr)
    {
        cout<<it<<" ";
    }
    cout<<endl;
    int k=17;
    Solution solution;
    auto res1=solution.findLowerBound1(arr,k);
    auto res2=solution.findLowerBound2(arr,k);
    cout<<res1<<" "<<res2<<endl;
}


