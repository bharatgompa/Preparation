#include<bits/stdc++.h>
using namespace std;


class Solution{
private:
public:
    int findNumberOfTimesArrayIsRotated(vector<int> &arr)
    {
        int n=arr.size(),low=0,high=n-1,ans=INT_MAX,ind=-1;
        while(low<=high)
        {
            int mid=low+(high-low)/2;
            if(arr[low]<=arr[high])
            {
                if(arr[low]<ans)
                {
                    ans=arr[low];
                    ind=low;
                }
                break;
            }
            if(arr[low]<=arr[mid])
            {
                if(arr[low]<ans)
                {
                    ans=arr[low];
                    ind=low;
                }
                low=mid+1;
            }
            else
            {
                if(arr[mid]<ans)
                {
                    ans=arr[mid];
                    ind=mid;
                }
                high=mid-1;
            }
        }
        return ind;
    }
};
int main()
{
    vector<int> arr={4, 5, 6, 7, 0, 1, 2, 3};
    for(auto it:arr)
    {
        cout<<it<<" ";
    }
    cout<<endl;
    Solution solution;
    auto res=solution.findNumberOfTimesArrayIsRotated(arr);
    cout<<res<<endl;
}

