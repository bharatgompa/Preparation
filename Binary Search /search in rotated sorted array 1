#include<bits/stdc++.h>
using namespace std;

// Given a sorted array of distinct elements and it is rotated at some pivot point p that is unknown .. now find the target
   element in the given array if found return the index or else -1

class Solution{
private:
public:
    int searchInRotatedSortedArray1(vector<int> &arr,int k)
    {
        int n=arr.size(),low=0,high=n-1;
        while(low<=high)
        {
            int mid=low+(high-low)/2;
            if(arr[mid]==k)
            {
                return mid;
            }
            else if(arr[low]<=arr[mid])
            {
                if(arr[low]<=k and k<=arr[mid])
                {
                    high=mid-1;
                }
                else
                {
                    low=mid+1;
                }
            }
            else
            {
                if(arr[mid]<=k and k<=arr[high])
                {
                    low=mid+1;
                }
                else
                {
                    high=mid-1;
                }
            }
        }
        return -1;
    }
};
int main()
{
    vector<int> arr={4,5,6,7,0,1,2,3};
    for(auto it:arr)
    {
        cout<<it<<" ";
    }
    cout<<endl;
    int k=0;
    Solution solution;
    auto res=solution.searchInRotatedSortedArray1(arr,k);
    cout<<res<<endl;
}


