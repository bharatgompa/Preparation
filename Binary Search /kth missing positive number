#include<bits/stdc++.h>
using namespace std;

// This is a very good BS problem
// for returning the missing number see the strivers video of deriving formula

class Solution{
private:
public:
    int kthMissingPositive(vector<int> &arr,int k)
    {
        int n=arr.size(),low=0,high=n-1;
        while(low<=high)
        {
            int mid=low+(high-low)/2;
            int missing=arr[mid]-(mid+1);
            if(missing<k)
            {
                low=mid+1;
            }
            else
            {
                high=mid-1;
            }
        }
        return low+k; // see strivers video for better understanding
    }
};
int main()
{
    vector<int> arr={4,7,9,10};
    for(auto it:arr)
    {
        cout<<it<<" ";
    }
    cout<<endl;
    int k=10;
    Solution solution;
    auto res=solution.kthMissingPositive(arr,k);
    cout<<k<<"th missing positive number is : "<<res<<endl;
}

